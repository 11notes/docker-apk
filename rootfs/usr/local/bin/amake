#!/bin/ash
  if [ ! -z "${1}" ]; then
    aportscheckout ${1} ${2}
  fi

  for SRC in /src/* ; do
    APK_NAME=$(echo ${SRC} | sed  's#/src/##g')
    eleven log info "building ${APK_NAME}"
    cd ${APP_ROOT}
    newapkbuild ${APK_NAME}
    cp -R ${SRC}/* ${APP_ROOT}/${APK_NAME}
    cd ${APP_ROOT}/${APK_NAME}
    abuild checksum
    abuild -r
  done

  cp -R ${APP_ROOT}/packages/build/* /apk