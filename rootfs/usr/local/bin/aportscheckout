#!/bin/ash
  if [ ! -z "${1}" ]; then
    eleven log info "sparse checkout ${2} on ${1}"
    BRANCH=${APORTS}/${1}
    if [ ! -d "${BRANCH}" ]; then
      git clone --filter=tree:0 --no-checkout --depth 1 --sparse https://gitlab.alpinelinux.org/alpine/aports.git -b ${1}-stable ${BRANCH}
    fi
    cd ${BRANCH}
    for PKG in ${2}; do
      git sparse-checkout add main/${PKG}
    done
    git checkout
    cp -R ./main/* /src
  fi